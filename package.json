{
  "name": "commons-api-v2",
  "version": "1.0.0",
  "main": "server.ts",
  "repository": "git@github.com:Commoddity/commons-api-v2.git",
  "author": "pascalvl <pascal@coinmiles.io>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p ./",
    "lint": "eslint . --ext .ts",
    "test": "NODE_ENV=test jest",
    "db:reset": "ts-node ./src/bin/resetDb.ts",
    "db:test_reset": "ts-node ./src/bin/testResetDb.ts",
    "push:dev": "yarn lint && yarn build && yarn test && git push origin dev"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "ext": "ts, js"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.23",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/graphql": "^14.5.0",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20",
    "@types/pg-promise": "^5.4.3",
    "@types/sqlstring": "^2.3.0",
    "@types/xml2js": "^0.4.7",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "apollo-server-types": "^0.6.2",
    "eslint": "^7.17.0",
    "graphql-import-node": "0.0.4",
    "graphql-tools": "^7.0.2",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "apollo-server-express": "^2.19.1",
    "axios": "^0.21.1",
    "cheerio": "^1.0.0-rc.5",
    "cors": "^2.8.5",
    "dayjs": "^1.10.2",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "graphql-iso-date": "^3.6.1",
    "join-monster": "^3.0.1",
    "mysql": "^2.18.1",
    "pg-promise": "^10.8.7",
    "sqlstring": "^2.3.2",
    "ts-transformer-keys": "^0.4.3",
    "xml2js": "^0.4.23"
  }
}
