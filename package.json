{
  "name": "commons-api",
  "version": "1.0.0",
  "repository": "git@github.com:Commoddity/commons-api-v2.git",
  "author": "commons-app <canada.commons.app@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "update:main": "git add .; git commit -m \"Updating main\"; git checkout main; git merge dev; git push origin main; git checkout dev;",
    "build": "tsc -p ./",
    "build:clean": "tsc --build --clean",
    "codegen:admin": "graphql-codegen --config ./graphql/admin/codegen.yml",
    "codegen:client": "graphql-codegen --config ./graphql/client/codegen.yml",
    "validate": "serverless validate-schema",
    "playground": "serverless graphql-playground",
    "lint": "eslint . --ext .ts",
    "set:dev": "export NODE_ENV=dev && export branch=dev;",
    "test": "yarn && yarn build && yarn set:dev && jest",
    "test:silent": "yarn && yarn build && yarn set:dev && jest --silent",
    "run:dev": "yarn && yarn build && yarn set:dev ts-node",
    "deploy:dev": "yarn && yarn build:clean && yarn build && yarn set:dev && serverless deploy --stage dev"
  },
  "dependencies": {
    "@graphql-codegen/typescript-react-apollo": "^3.2.4",
    "@mapbox/mapbox-sdk": "^0.13.2",
    "article-parser": "^5.0.2",
    "axios": "^0.24.0",
    "cheerio": "^1.0.0-rc.10",
    "dayjs": "^1.10.7",
    "mongoose": "^6.1.6",
    "serverless": "^2.71.0",
    "serverless-appsync-plugin": "^1.12.1",
    "striptags": "^3.2.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.46.0",
    "@graphql-codegen/cli": "^2.3.1",
    "@graphql-codegen/typescript": "^2.4.2",
    "@graphql-codegen/typescript-operations": "^2.2.2",
    "@types/cheerio": "^0.22.30",
    "@types/jest": "^27.4.0",
    "@types/mapbox__mapbox-sdk": "^0.13.2",
    "@types/node": "^17.0.8",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "aws-sdk": "^2.1057.0",
    "eslint": "^8.6.0",
    "graphql": "^16.2.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "serverless-plugin-common-excludes": "^4.0.0",
    "serverless-plugin-include-dependencies": "^5.0.0",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "yarn-upgrade-all": "^0.6.1"
  }
}
