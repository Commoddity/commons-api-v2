{
  "name": "commons-api-v2",
  "version": "1.0.0",
  "main": "server.ts",
  "repository": "git@github.com:Commoddity/commons-api-v2.git",
  "author": "pascalvl <pascal@coinmiles.io>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc -p ./",
    "lint": "eslint . --ext .ts",
    "test": "NODE_ENV=test jest --silent --detectOpenHandles",
    "test:log": "NODE_ENV=test jest --detectOpenHandles",
    "db:init": "NODE_ENV=dev ts-node -r tsconfig-paths/register ./src/bin/schemaReset.ts && NODE_ENV=dev ts-node -r tsconfig-paths/register --files ./src/bin/updateDb.ts",
    "db:test_reset": "NODE_ENV=test ts-node -r tsconfig-paths/register ./src/bin/testResetDb.ts",
    "push:dev": "yarn lint && yarn build && yarn test && git push origin dev",
    "db:update_database": "NODE_ENV=dev ts-node -r tsconfig-paths/register --files ./src/bin/updateDb.ts",
    "dev": "AWS_PROFILE=commons && sls offline --env dev",
    "deploy": "AWS_PROFILE=commons && sls deploy --env dev",
    "dev:full": "AWS_PROFILE=commons && yarn lint && yarn build && yarn test && sls offline --env dev",
    "aws:db": "psql -h commons-app-database-dev.chgjlhdzehsr.ca-central-1.rds.amazonaws.com -p 5432 --username commons_admin -d postgres --pset expanded=auto;"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register src/server.ts",
    "ext": "ts, js"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.1.0",
    "@types/body-parser": "^1.19.0",
    "@types/cheerio": "^0.22.23",
    "@types/dotenv-flow": "^3.1.0",
    "@types/express": "^4.17.11",
    "@types/graphql": "^14.5.0",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/pg-promise": "^5.4.3",
    "@types/xml2js": "^0.4.8",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "serverless-dotenv-plugin": "^3.1.0",
    "serverless-offline": "^6.8.0",
    "serverless-plugin-typescript": "^1.1.9",
    "serverless-tscpaths": "^0.0.5",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "aws-sdk": "^2.831.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.5",
    "cors": "^2.8.5",
    "dayjs": "^1.10.4",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.4.0",
    "graphql-iso-date": "^3.6.1",
    "join-monster": "^3.0.1",
    "path": "^0.12.7",
    "pg-promise": "^10.9.1",
    "serverless-http": "^2.7.0",
    "xml2js": "^0.4.23"
  }
}
