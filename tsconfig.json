{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "baseUrl": "./",
    "paths": {
      "@db": ["src/db"],
      "@graphql": ["src/db/graphql/schema"],
      "@scripts": ["src/scripts"],
      "@services": ["src/service"],
      "@test": ["src/test"],
      "@utils": ["src/utils"]
    },
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  }
}
