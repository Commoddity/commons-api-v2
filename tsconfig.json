{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["./src/**/*.ts"]
}
